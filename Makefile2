# Define executable name
BIN = sim

# Define source files
SRCS = sim.cpp

# Define header file paths
INCDIR = $(GARFIELD_HOME)/Include
HEEDDIR = $(GARFIELD_HOME)/Heed
INCPATH = -Iinclude/ -I$(INCDIR) -I$(HEEDDIR)

# Define the -L library path(s)
LIBDIR = $(GARFIELD_HOME)/Library
LDFLAGS = `root-config --glibs` -L$(LIBDIR) -lGeom -lm -lGarfield -lMathCore -lGraf3d -lgfortran

# Define the -l library name(s)
LIBS = 

# Only in special cases should anything be edited below this line
OBJS      = $(CPP_SRCS:.cpp=.o)
CXXFLAGS  = -nostartfiles -Wall -ansi -Wextra -Wno-long-long -O3 -fno-common -pedantic `root-config --cflags` `root-config --libs`
DEP_FILE  = .depend


.PHONY = all clean distclean


# Main entry point
#
all: depend $(BIN)


# For linking object file(s) to produce the executable
#
$(BIN): $(OBJS)
	@echo Linking $@
	@$(CXX) $^ $(LDFLAGS) $(LIBS) -o $@
	@echo done


# For compiling source file(s)
#
.cpp.o:
	@echo Compiling $<
	@$(CXX) -c $(CXXFLAGS) $(INCPATH) $<


# For cleaning up the project
#
clean:
	$(RM) $(OBJS)

distclean: clean
	$(RM) $(BIN)
	$(RM) $(DEP_FILE)


# For determining source file dependencies
#
depend: $(DEP_FILE)
	@touch $(DEP_FILE)

$(DEP_FILE):
	@echo Generating dependencies in $@
	@-$(CXX) -E -MM $(CXXFLAGS) $(INCPATH) $(SRCS) >> $(DEP_FILE)

ifeq (,$(findstring clean,$(MAKECMDGOALS)))
ifeq (,$(findstring distclean,$(MAKECMDGOALS)))
-include $(DEP_FILE)
endif
endif
